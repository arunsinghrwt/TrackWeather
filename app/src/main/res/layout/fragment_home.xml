<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/new_bg"
    android:paddingBottom="20dp"
    android:orientation = "vertical"
    android:scrollbars = "none"
    android:layout_height="match_parent"
    tools:context=".Ui.HomeFragment">

<LinearLayout
    android:id="@+id/MainView"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <ImageView
            android:id="@+id/myView"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/weather"
            android:visibility="visible"
            android:layout_height="match_parent">

        </ImageView>
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="Jaipur"
            android:textColor="@color/white"
            android:fontFamily="@font/quicksand_semibold"
            android:textSize="18dp"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_margin="42dp"
            android:src="@drawable/ic_baseline_location_on_24"
            android:layout_height="wrap_content">
        </ImageView>
        <LinearLayout
                android:layout_gravity="bottom"
                android:layout_marginBottom="40dp"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/current_temp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="29\u2103"
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:textSize="40sp"
                    android:fontFamily="@font/quicksand_semibold"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/weather_type"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="Haze"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:gravity="end"
                    android:fontFamily="@font/quicksand_semibold"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/max_min"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="30\u2103 / 21\u2103  Fri"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/quicksand_regular"
                android:layout_height="0dp">
            </TextView>

            </LinearLayout>



    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/hourly_temp"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "horizontal"
        android:paddingTop = "10dp"
        android:paddingBottom="10dp"
        app:layoutManager = "androidx.recyclerview.widget.LinearLayoutManager"
        />


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:text="@string/four_days"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18sp"
        android:fontFamily="@font/quicksand_semibold"
        android:textColor="@color/white"
        android:layout_height="wrap_content">


    </TextView>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:text="@string/weather_detail"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18sp"
        android:fontFamily="@font/quicksand_semibold"
        android:textColor="@color/white"
        android:layout_height="wrap_content">
    </TextView>

<include
    android:id="@+id/weather_detail"
    layout="@layout/weather_detail">

</include>



</LinearLayout>




















</ScrollView>