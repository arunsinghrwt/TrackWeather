<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="12dp"
    android:background="@color/new_bg"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id = "@+id/app_temp"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:padding="10dp"
                android:visibility="visible"
                android:orientation = "vertical"

                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="31\u2103"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textSize="16dp"
                    android:textColor = "@color/white"
                    >
                </TextView>
                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="Apparent temperature"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/quicksand_light"
                    android:textColor = "@color/grey"
                    android:textSize = "14dp"

                    >
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id = "@+id/visibility"
                android:layout_width = "match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height = "wrap_content"
                android:padding="10dp"
                android:layout_weight = "1"

                android:orientation = "vertical"

                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="4 km"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textSize="18dp"
                    android:textColor = "@color/white"


                    >
                </TextView>
                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="Visibility"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/quicksand_light"
                    android:textColor = "@color/grey"
                    android:textSize = "14dp"

                    >
                </TextView>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id = "@+id/air_pre"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:padding="10dp"
                android:visibility="visible"
                android:orientation = "vertical"

                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="1008 hPa"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textSize="16dp"
                    android:textColor = "@color/white"
                    >
                </TextView>
                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="Air pressure"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/quicksand_light"
                    android:textColor = "@color/grey"
                    android:textSize = "14dp"

                    >
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id = "@+id/uv"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight = "1"
                android:orientation = "vertical"

                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="Strong"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textSize="18dp"
                    android:textColor = "@color/white"


                    >
                </TextView>
                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="uv"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/quicksand_light"
                    android:textColor = "@color/grey"
                    android:textSize = "14dp"

                    >
                </TextView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id = "@+id/humidity"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:padding="10dp"
                android:visibility="visible"
                android:orientation = "vertical"

                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="31\u2103"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textSize="16dp"
                    android:textColor = "@color/white"
                    >
                </TextView>
                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="Humidity"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/quicksand_light"
                    android:textColor = "@color/grey"
                    android:textSize = "14dp"

                    >
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id = "@+id/apply_loan"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:orientation = "vertical"

                >

                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="8 km/h"

                    android:fontFamily="@font/quicksand_semibold"
                    android:textSize="16dp"

                    android:textColor = "@color/white"


                    >
                </TextView>
                <TextView
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text="NE wind"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/quicksand_light"
                    android:textColor = "@color/white"
                    android:textSize = "14dp"

                    >
                </TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>